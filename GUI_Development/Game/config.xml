<!-- Config file for the game -->

<config>
  <app framerate_cap="">
    <title>Pathfinding Test</title>
    <organization>UPC</organization>
  </app>
	
  <renderer>
    <vsync value="true"/>
  </renderer>

  <font>
    <default_font file="fonts/open_sans/OpenSans-Regular.ttf" size="12"/>
  </font>

  <scene>
    <label text="This is a test" position_x="50" position_y="100" draggable="true"/>
    <label text="This is ANOTHER test" position_x="50" position_y="300" draggable="true"/>
  </scene>

  <gui>
    <atlas file="gui/atlas_lol.png"/>
  </gui>
    
  <window>
    <resolution width="1024" height="576" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <file_system>
    <path>data.zip</path>
  </file_system>

  <map>
    <folder>maps/</folder>
  </map>

</config>